<h2><%= wall.title %></h2>
<h3><%= wall.description %></h3>
<p/>
<% wall.errors.map do |error| %>
  <%= error %>
<% end %>

<form action='/walls/<%= wall.id %>/edit' method='GET'>
  <button type='submit'>Edit</button>
</form>

<form action='/walls/<%= wall.id %>' method='POST'>
  <input type='text' name='created_by' value="Enter creator's name">
  <input type='hidden' name='_method' value='delete'>
  <button type='submit'>Destroy this wall</button>
</form>

<a href="/">Back to all walls</a>
